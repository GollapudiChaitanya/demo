@model List<Game>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/GameLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Add New Game</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Game ID
            </th>
            <th>
                Game Name
            </th>
            <th>
                Game Type
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GameId)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameType)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GameId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GameId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GameId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
